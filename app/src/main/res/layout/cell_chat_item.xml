<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.selwantech.raheeb.viewmodel.ItemChatMessageViewModel" />
    </data>

    <LinearLayout
        android:id="@+id/relativeCellChatItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearOutMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center|start"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_50sdp"
                android:layout_marginEnd="@dimen/_15sdp">

                <TextView
                    android:id="@+id/tvOutDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:gravity="center|start"
                    android:text="datemvl;dml;md"
                    android:textColor="@color/text_gray"
                    android:textSize="8sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvOutDate"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="@dimen/_11sdp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/shape_black_for_bott"
                    android:backgroundTint="@color/fill_order_dark_gray"
                    android:minHeight="@dimen/_50sdp"
                    android:orientation="horizontal"
                    android:padding="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/tvOutMessage"
                        style="@style/poppins_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|end"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:text="dfboihfoiboidf"
                        android:textColor="@color/black"
                        android:textSize="9sp"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|start"
                        android:orientation="horizontal">

                        <ProgressBar
                            android:id="@+id/progress_bar"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginStart="@dimen/_7sdp"
                            android:visibility="gone" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="@dimen/_17sdp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:id="@+id/play"
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_gravity="center"
                                android:scaleType="centerCrop"
                                app:srcCompat="@drawable/ic_play" />

                        </androidx.cardview.widget.CardView>

                        <SeekBar
                            android:id="@+id/seekAudioOut"
                            android:layout_width="150dp"
                            android:layout_height="25dp"
                            android:focusable="false"
                            android:focusableInTouchMode="false" />

                        <TextView
                            android:id="@+id/tvSeekDurationOut"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_7sdp"
                            android:text="150"
                            android:visibility="visible" />

                    </LinearLayout>

                </LinearLayout>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgMyAvatar"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:src="@color/color_blue" />
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardResend"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:visibility="gone"
                app:cardBackgroundColor="@color/blue"
                app:cardCornerRadius="@dimen/_10sdp">

                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_resend" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearInMsgTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center|start"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_50sdp">

                <TextView
                    android:id="@+id/tvInTxtDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:gravity="center|end"
                    android:text="datemvl;dml;md"
                    android:textColor="@color/text_gray"
                    android:textSize="8sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvInTxtDate"
                    android:layout_marginStart="@dimen/_11sdp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/shape_black_for_bott"
                    android:backgroundTint="@color/received_message_bubble"
                    android:minHeight="@dimen/_50sdp"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|start"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="@dimen/_17sdp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:id="@+id/playIn"
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_gravity="center"
                                android:scaleType="centerCrop"
                                app:srcCompat="@drawable/ic_play" />

                        </androidx.cardview.widget.CardView>

                        <SeekBar
                            android:id="@+id/seekAudioIn"
                            android:layout_width="150dp"
                            android:layout_height="25dp"
                            android:focusable="false"
                            android:focusableInTouchMode="false" />

                        <TextView
                            android:id="@+id/tvSeekDurationIn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_7sdp"
                            android:text="150"
                            android:visibility="visible" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvInMessage"
                        style="@style/poppins_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|start"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:text="dfboihfoiboidf"
                        android:textColor="@color/black"
                        android:textSize="9sp"
                        android:visibility="gone" />


                    <Button
                        android:id="@+id/btnAcceptOffer"
                        style="@style/poppins_regular"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:background="@drawable/shape_of_logo"
                        android:onClick="@{viewModel::onAcceptOfferClick}"
                        android:text="@string/accept"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        android:visibility="@{viewModel.isOffer()}" />

                </LinearLayout>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgOtherSideAvatar"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:src="@color/color_blue" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
</layout>