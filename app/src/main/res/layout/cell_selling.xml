<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.selwantech.raheeb.viewmodel.ItemSellingViewModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardOfferCell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{viewModel::onItemClick}"
        android:orientation="vertical"
        app:cardCornerRadius="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgProductPicture"
                imageUrl="@{viewModel.selling.images.get(0).image}"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:background="@drawable/shape_rounded_empty_gray"
                android:padding="@dimen/_4sdp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_weight="1"
                android:gravity="center|start"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvName"
                    style="@style/poppins_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.selling.title}"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="center|start"
                    android:id="@+id/relativeInteracted"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgUser1"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@color/color_blue"
                        android:visibility="gone" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgUser2"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginStart="-7.5dp"
                        android:layout_toEndOf="@id/imgUser1"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_toEndOf="@id/imgUser2"
                        android:background="@drawable/shape_oval_dotted"
                        android:gravity="center"
                        android:id="@+id/linearMoreCount"
                        android:minHeight="15dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tvMoreCount"
                            style="@style/poppins_light"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_7sdp"
                            android:layout_marginEnd="@dimen/_7sdp"
                            android:textColor="@color/text_gray"
                            android:textSize="8sp" />
                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="center|start"
                    android:orientation="horizontal"
                    android:visibility="@{viewModel.viewMarkedSold()}">

                    <TextView
                        android:id="@+id/tvSellingFast"
                        style="@style/poppins_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:onClick="@{viewModel::onSellFasterClick}"
                        android:text="@string/selling_faster"
                        android:textColor="@color/color_blue"
                        android:textSize="13sp"
                        android:visibility="gone" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:visibility="gone"
                        android:background="@color/text_gray" />

                    <TextView
                        android:id="@+id/tvMarkSold"
                        style="@style/poppins_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="@{viewModel::onMarkSoldClick}"
                        android:text="@string/mark_sold"
                        android:textColor="@color/color_blue"
                        android:textSize="13sp" />
                </LinearLayout>


            </LinearLayout>

            <ImageView
                android:id="@+id/imgView"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_20sdp"
                android:onClick="@{viewModel::onItemClick}"
                app:srcCompat="@drawable/ic_arrow_forward" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</layout>