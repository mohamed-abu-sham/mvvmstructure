<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.selwantech.raheeb.viewmodel.ItemChatMessageReceivedViewModel" />
    </data>

    <LinearLayout
        android:id="@+id/relativeCellChatItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:onClick="@{viewModel::onItemClick}"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearInMsgTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center|start"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_50sdp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvInTxtDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="end"
                        android:gravity="center|end"
                        android:text="@{viewModel.messages.date}"
                        android:textColor="@color/text_gray"
                        android:textSize="10sp" />


                    <LinearLayout
                        android:id="@+id/linear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvInTxtDate"
                        android:layout_marginStart="@dimen/_11sdp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/shape_black_for_bott"
                        android:backgroundTint="@color/received_message_bubble"
                        android:minWidth="@dimen/_150sdp"
                        android:minHeight="@dimen/_50sdp"
                        android:orientation="vertical"
                        android:padding="@dimen/_10sdp">

                        <TextView
                            android:id="@+id/tvInMessage"
                            style="@style/poppins_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:text="@{viewModel.messages.message}"
                            android:textColor="@color/black"
                            android:textSize="13sp"
                            android:visibility="gone" />

                        <LinearLayout
                            android:id="@+id/linearPlayer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center|start"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <androidx.cardview.widget.CardView
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_25sdp"
                                android:onClick="@{()->viewModel.onPlayClick()}"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="@dimen/_17sdp"
                                app:cardElevation="0dp">

                                <ImageView
                                    android:id="@+id/play"
                                    android:layout_width="@dimen/_15sdp"
                                    android:layout_height="@dimen/_15sdp"
                                    android:layout_gravity="center"
                                    android:scaleType="centerCrop"
                                    app:srcCompat="@drawable/ic_play" />

                            </androidx.cardview.widget.CardView>

                            <SeekBar
                                android:id="@+id/seekAudioIn"
                                android:layout_width="@dimen/_170sdp"
                                android:layout_height="25dp"
                                android:focusable="false"
                                android:focusableInTouchMode="false" />

                            <TextView
                                android:id="@+id/tvSeekDurationIn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_7sdp"
                                android:text="150"
                                android:visibility="gone" />

                        </LinearLayout>


                        <Button
                            android:id="@+id/btnAcceptOffer"
                            style="@style/poppins_regular"
                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:background="@drawable/shape_of_logo"
                            android:onClick="@{viewModel::onAcceptOfferClick}"
                            android:text="@string/accept"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="11sp"
                            android:visibility="gone" />

                    </LinearLayout>
                </LinearLayout>


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgOtherSideAvatar"
                    imageUrl="@{viewModel.messages.sender.avatar}"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:src="@color/color_blue" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
</layout>