<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.selwantech.raheeb.viewmodel.ItemShippingBoxViewModel" />
    </data>

    <LinearLayout
        android:id="@+id/relativeMain"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearMain"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:background="@drawable/shape_rounded_empty_blue"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgPicture"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_21sdp"
                android:tint="@color/text_gray"
                app:srcCompat="@drawable/ic_box_size" />

            <TextView
                android:id="@+id/tvName"
                style="@style/poppins_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center"
                android:text="@{viewModel.boxSize.name}"
                android:textColor="@color/black"
                android:textSize="10sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvPrice"
            style="@style/poppins_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:gravity="center"
            android:text="@{viewModel.boxSize.price.formatted}"
            android:textColor="@color/color_blue"
            android:textSize="12sp" />
    </LinearLayout>
</layout>