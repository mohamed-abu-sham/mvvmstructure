<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

<!--        <variable-->
<!--            name="viewModel"-->
<!--            type="com.selwantech.khadmat.user.ui.technicalsupport.TechnicalSupportViewModel" />-->
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|top"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/need_help"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/we_receive_all_your_inquiries_and_suggestions"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="50dp"
                        android:layout_marginEnd="20dp"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/message"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            app:cardBackgroundColor="@color/card_background_light_gray"
                            app:cardCornerRadius="@dimen/_2sdp"
                            app:cardElevation="1dp">

                            <EditText
                                android:id="@+id/edMessage"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:background="@color/card_background_light_gray"
                                android:gravity="center|top|start"
                                android:hint="@string/type_a_message"
                                android:minHeight="@dimen/_100sdp"
                                android:padding="10dp"
                                android:text=""
                                android:textSize="16sp" />
                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:id="@+id/linearAddImage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:background="@color/card_background_light_gray"
                            android:gravity="center|start"
                            android:orientation="horizontal"
                            android:padding="@dimen/_10sdp">

                            <LinearLayout
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="@dimen/_60sdp"
                                android:background="@color/card_background_light_gray"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="@dimen/_60sdp"
                                    android:layout_height="@dimen/_60sdp">

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="@dimen/_50sdp"
                                        android:layout_height="@dimen/_50sdp"
                                        android:layout_alignParentStart="true"
                                        android:layout_centerInParent="true"
                                        app:cardCornerRadius="@dimen/_5sdp"
                                        app:cardElevation="0dp">

                                        <ImageView
                                            android:id="@+id/imgPicture"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="center"
                                            android:scaleType="centerCrop"
                                            app:srcCompat="@drawable/ic_image" />

                                    </androidx.cardview.widget.CardView>

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="@dimen/_25sdp"
                                        android:layout_height="@dimen/_25sdp"
                                        android:layout_alignParentEnd="true"
                                        android:layout_alignParentBottom="true"
                                        app:cardBackgroundColor="@color/colorPrimaryDark"
                                        app:cardCornerRadius="@dimen/_17sdp"
                                        app:cardElevation="0dp">

                                        <ImageView
                                            android:id="@+id/imgUpdateProfilePicture"
                                            android:layout_width="@dimen/_15sdp"
                                            android:layout_height="@dimen/_15sdp"
                                            android:layout_gravity="center"
                                            android:tint="@color/white"
                                            app:srcCompat="@drawable/ic_camera" />

                                    </androidx.cardview.widget.CardView>

                                </RelativeLayout>

                                <LinearLayout
                                    android:id="@+id/linearProgress"
                                    android:layout_width="0dp"
                                    android:layout_height="5dp"
                                    android:layout_marginTop="10dp"
                                    android:background="@color/Rose"
                                    android:orientation="horizontal" />
                            </LinearLayout>

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:visibility="gone"
                                app:srcCompat="@drawable/ic_camera_green" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:text="@string/upload_picture"
                                android:textColor="@color/very_light_blue"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:gravity="center|start"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="@dimen/_10sdp"
                                android:background="@drawable/shape_rounded_empty"
                                android:buttonTint="@color/colorPrimaryDark" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_weight="1"
                                android:text="@string/you_will_be_answered_via_email_as_soon_as"
                                android:textColor="@color/very_light_blue"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <Button
                        android:id="@+id/btnSave"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="@dimen/_30sdp"
                        android:layout_marginTop="@dimen/_50sdp"
                        android:layout_marginEnd="@dimen/_30sdp"
                        android:layout_marginBottom="@dimen/_30sdp"
                        android:background="@drawable/shape_of_logo"
                        android:text="@string/send_message"
                        android:textColor="@color/white"
                        android:textSize="18sp" />


                </LinearLayout>
            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</layout>