<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.selwantech.raheeb.ui.dialog.AudioPlayerDialog" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_25sdp"
        android:orientation="vertical"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/_20sdp">

            <ImageView
                android:id="@+id/imgIcon"
                android:layout_width="65dp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/_15sdp"
                android:tint="@color/color_blue"
                app:srcCompat="@drawable/logo" />


            <ImageView
                android:id="@+id/imgDownload"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_below="@id/imgIcon"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/_15sdp"
                android:onClick="@{viewModel::onDownloadClick}"
                android:tint="@color/color_blue"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_file_download" />

            <LinearLayout
                android:id="@+id/linearPlayer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgDownload"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:onClick="@{()->viewModel.onPlayClick()}"
                    app:cardBackgroundColor="@color/color_blue"
                    app:cardCornerRadius="@dimen/_17sdp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/play"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:tint="@color/white"
                        app:srcCompat="@drawable/ic_play" />

                </androidx.cardview.widget.CardView>

                <SeekBar
                    android:id="@+id/seekAudioIn"
                    android:layout_width="150dp"
                    android:layout_height="25dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false" />

                <TextView
                    android:id="@+id/tvSeekDurationIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_7sdp"
                    android:text="00:00"
                    android:visibility="visible" />

            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</layout>