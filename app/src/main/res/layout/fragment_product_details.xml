<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.selwantech.raheeb.ui.productjourneys.viewproductjourney.productdetails.ProductDetailsViewModel" />

        <variable
            name="data"
            type="com.selwantech.raheeb.model.Product" />
    </data>

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_270sdp">

                    <ImageView
                        android:id="@+id/imgProduct"
                        imageUrl="@{data.images.get(0).image}"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@color/white" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_60sdp"
                        android:alpha="0.9"
                        android:background="@drawable/product_details_toolbar">

                        <ImageView
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_alignParentStart="true"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:onClick="@{()->viewModel.onBackClicked()}"
                            app:srcCompat="@drawable/ic_arrow_back" />

                        <ImageView
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_centerInParent="true"
                            android:layout_toStartOf="@id/imgFavorite"
                            android:onClick="@{()->viewModel.onShareClicked()}"
                            app:srcCompat="@drawable/ic_share_white" />

                        <ImageView
                            android:id="@+id/imgFavorite"
                            imageResources="@{data.isFavoriteDrawable()}"
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_marginEnd="@dimen/_20sdp"
                            android:onClick="@{()->viewModel.onFavoriteClicked()}"
                            app:srcCompat="@drawable/ic_favorite_white" />

                    </RelativeLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="-20dp"
                    android:background="@drawable/shape_rectangle"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_25sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvProductName"
                            style="@style/poppins_medium"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:singleLine="true"
                            android:text="@{data.title}"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <TextView
                            style="@style/poppins_semi_bold"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:background="@drawable/shape_black_for_bott"
                            android:backgroundTint="@color/color_blue"
                            android:gravity="center"
                            android:paddingStart="@dimen/_5sdp"
                            android:paddingEnd="@dimen/_5sdp"
                            android:text="@{data.price.formatted}"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvLocation"
                        style="@style/poppins_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="@color/text_gray"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:drawablePadding="@dimen/_5sdp"
                        android:gravity="center|start"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvDate"
                        style="@style/poppins_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:singleLine="true"
                        android:text="@{data.date}"
                        android:textColor="@color/text_gray"
                        android:textSize="12sp" />

                    <include
                        android:id="@+id/recyclerViewProductImage"
                        layout="@layout/recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@color/fill_order_dark_gray" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/imgUserImage"
                            imageUrl="@{data.productOwner.avatar}"
                            android:layout_width="@dimen/_32sdp"
                            android:layout_height="@dimen/_32sdp"
                            android:layout_alignParentStart="true"
                            android:layout_centerInParent="true"
                            android:src="@color/black" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_toStartOf="@id/imgForward"
                            android:layout_toEndOf="@id/imgUserImage"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvUserName"
                                style="@style/poppins_regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:singleLine="true"
                                android:text="@{data.productOwner.name}"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <LinearLayout
                                android:id="@+id/linearOwnerInfo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <TextView
                                    style="@style/poppins_regular"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawableStart="@drawable/ic_trusted"
                                    android:drawablePadding="@dimen/_3sdp"
                                    android:gravity="center"
                                    android:text="@string/trusted_member"
                                    android:textColor="@color/color_blue_dark"
                                    android:textSize="10sp" />

                                <TextView
                                    android:id="@+id/tvOwnerRate"
                                    style="@style/poppins_regular"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_15sdp"
                                    android:drawableStart="@drawable/ic_star_dark_gold"
                                    android:drawablePadding="@dimen/_3sdp"
                                    android:gravity="center"
                                    android:textColor="@color/black"
                                    android:textSize="10sp" />
                            </LinearLayout>
                        </LinearLayout>


                        <ImageView
                            android:id="@+id/imgForward"
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerInParent="true"
                            android:onClick="@{()->viewModel.onViewProductOwnerClicked()}"
                            app:srcCompat="@drawable/ic_arrow_forward" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/fill_order_dark_gray" />

                    <TextView
                        style="@style/poppins_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:text="@string/description"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvProductStatus"
                        style="@style/poppins_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:text="@{data.condition.name}"
                        android:textColor="@color/text_gray"
                        android:textSize="12sp" />

                    <TextView
                        style="@style/poppins_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:text="@{data.description}"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/fill_order_dark_gray" />


                    <LinearLayout
                        android:id="@+id/linearShip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_alignParentStart="true"
                            android:layout_centerInParent="true"
                            app:srcCompat="@drawable/ic_shipping_blue" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/poppins_regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:layout_toStartOf="@id/imgForward"
                                android:layout_toEndOf="@id/imgUserImage"
                                android:layout_weight="1"
                                android:singleLine="true"
                                android:text="@string/ship"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvGroundShipping"
                                style="@style/poppins_regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:layout_toStartOf="@id/imgForward"
                                android:layout_toEndOf="@id/imgUserImage"
                                android:layout_weight="1"
                                android:singleLine="true"
                                android:text="@string/ground_shipping"
                                android:textColor="@color/text_gray"
                                android:textSize="10sp" />
                        </LinearLayout>

                        <Button
                            style="@style/poppins_medium"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:background="@drawable/shape_rounded_empty_blue"
                            android:onClick="@{()->viewModel.onBuyNowClicked()}"
                            android:text="@string/buy_now"
                            android:textColor="@color/color_blue"
                            android:textSize="12sp" />
                    </LinearLayout>


                    <View
                        android:id="@+id/viewShip"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:background="@color/fill_order_dark_gray"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/linearShipProtection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_alignParentStart="true"
                            android:layout_centerInParent="true"
                            app:srcCompat="@drawable/ic_ship_protection" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                style="@style/poppins_regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:layout_toStartOf="@id/imgForward"
                                android:layout_toEndOf="@id/imgUserImage"
                                android:text="@string/shipping_purchase_protection"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvShippingProtectionDis"
                                style="@style/poppins_regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:layout_toStartOf="@id/imgForward"
                                android:layout_toEndOf="@id/imgUserImage"
                                android:text="@string/ground_shipping"
                                android:textColor="@color/text_gray"
                                android:textSize="10sp" />
                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:id="@+id/viewShipProtection"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:background="@color/fill_order_dark_gray"
                        android:visibility="gone" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_margin="@dimen/_10sdp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            style="@style/poppins_medium"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/fill_order_dark_gray"
                            android:drawableStart="@drawable/ic_favorite_outline"
                            android:onClick="@{()->viewModel.onFavoriteClicked()}"
                            android:text="@{data.isFavoriteText()}"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <Button
                            style="@style/poppins_medium"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/fill_order_dark_gray"
                            android:drawableStart="@drawable/ic_report_black"
                            android:onClick="@{()->viewModel.onReportClicked()}"
                            android:text="@string/report"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <Button
                            style="@style/poppins_medium"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/fill_order_dark_gray"
                            android:drawableStart="@drawable/ic_share_black"
                            android:gravity="center"
                            android:onClick="@{()->viewModel.onShareClicked()}"
                            android:text="@string/share"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvLocation2"
                        style="@style/poppins_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:singleLine="true"
                        android:textColor="@color/text_gray"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:id="@+id/linearShippedToYou"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:gravity="center|start"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_alignParentStart="true"
                            android:layout_centerInParent="true"
                            app:srcCompat="@drawable/ic_shipping_blue" />

                        <TextView
                            android:id="@+id/tvShippedToYou"
                            style="@style/poppins_regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_toStartOf="@id/imgForward"
                            android:layout_toEndOf="@id/imgUserImage"
                            android:layout_weight="1"
                            android:singleLine="true"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="12sp" />

                    </LinearLayout>
                    <fragment
                        android:id="@+id/search_place_map"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_150sdp"
                        android:layout_below="@id/mainLayout"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        tools:context=".ui.ui.menufragments.productdetails." />

                    <TextView
                        style="@style/poppins_regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:gravity="center"
                        android:text="@string/map_is_approximate_to_keep_the_sellers_location_private"
                        android:textColor="@color/black"
                        android:textSize="10sp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearPriceDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:gravity="center|start"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    app:srcCompat="@drawable/ic_shipping_blue" />

                <TextView
                    android:id="@+id/tvPriceDetails"
                    style="@style/poppins_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_toStartOf="@id/imgForward"
                    android:layout_toEndOf="@id/imgUserImage"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_margin="@dimen/_10sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    style="@style/poppins_semi_bold"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_rounded_empty_blue"
                    android:onClick="@{()->viewModel.onAskClicked()}"
                    android:text="@string/ask"
                    android:textColor="@color/color_blue"
                    android:textSize="16sp" />

                <Button
                    style="@style/poppins_semi_bold"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_black_for_bott"
                    android:backgroundTint="@color/color_blue"
                    android:onClick="@{()->viewModel.onMakeOfferClicked()}"
                    android:text="@string/make_offer"
                    android:textColor="@color/white" />

                <Button
                    style="@style/poppins_semi_bold"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_black_for_bott"
                    android:backgroundTint="@color/color_dark_gold"
                    android:onClick="@{()->viewModel.onBuyNowClicked()}"
                    android:text="@string/buy_now"
                    android:textColor="@color/black" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</layout>