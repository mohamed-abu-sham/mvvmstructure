<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.selwantech.raheeb.viewmodel.ItemProductViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:layout_margin="@dimen/_5sdp"
        android:onClick="@{viewModel::onItemClick}">
        <ImageView
            android:id="@+id/imgProductPicture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            imageUrl="@{viewModel.product.images.get(0).image}"
            android:scaleType="fitXY"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true">
            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                app:srcCompat="@drawable/ic_shipping"
                android:id="@+id/imgShipping"
                android:layout_marginEnd="@dimen/_7sdp"
                android:layout_marginBottom="@dimen/_4sdp"
                android:visibility="@{viewModel.isShipping}" />
        </LinearLayout>

    </RelativeLayout>


</layout>