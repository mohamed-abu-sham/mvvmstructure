<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.selwantech.raheeb.ui.productjourneys.viewproductjourney.reportproduct.ReportProductViewModel" />
        <variable
            name="product"
            type="com.selwantech.raheeb.model.Product" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ToolbarColoredBackArrowDark" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_10sdp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imgProductPicture"
                                imageUrl="@{product.images.get(0).image}"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:background="@drawable/shape_rounded_empty_gray"
                                android:padding="@dimen/_4sdp" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:gravity="center|start"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvName"
                                    style="@style/poppins_medium"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@{product.title}"
                                    android:textColor="@color/black"
                                    android:gravity="@{viewModel.gravity}"
                                    android:textSize="14sp" />
                                <TextView
                                    android:id="@+id/tvMarkSold"
                                    style="@style/poppins_regular"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@{product.price.formatted}"
                                    android:textColor="@color/color_blue"
                                    android:textSize="13sp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:gravity="center|start"/>

                            </LinearLayout>

                        </LinearLayout>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            app:cardBackgroundColor="@color/card_background_light_gray"
                            app:cardCornerRadius="@dimen/_2sdp"
                            app:cardElevation="1dp">

                            <EditText
                                android:id="@+id/edMessage"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:background="@color/card_background_light_gray"
                                android:gravity="center|top|start"
                                android:hint="@string/type_a_message"
                                android:minHeight="@dimen/_100sdp"
                                android:padding="10dp"
                                android:text=""
                                android:textSize="16sp" />
                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:id="@+id/linearAddImage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:background="@color/card_background_light_gray"
                            android:gravity="center|start"
                            android:orientation="horizontal"
                            android:padding="@dimen/_10sdp">

                            <LinearLayout
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="@dimen/_60sdp"
                                android:background="@color/card_background_light_gray"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="@dimen/_60sdp"
                                    android:layout_height="@dimen/_60sdp">

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="@dimen/_50sdp"
                                        android:layout_height="@dimen/_50sdp"
                                        android:layout_alignParentStart="true"
                                        android:layout_centerInParent="true"
                                        app:cardCornerRadius="@dimen/_5sdp"
                                        app:cardElevation="0dp">

                                        <ImageView
                                            android:id="@+id/imgPicture"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="center"
                                            android:scaleType="centerCrop"
                                            app:srcCompat="@drawable/ic_image" />

                                    </androidx.cardview.widget.CardView>

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="@dimen/_25sdp"
                                        android:layout_height="@dimen/_25sdp"
                                        android:layout_alignParentEnd="true"
                                        android:layout_alignParentBottom="true"
                                        app:cardBackgroundColor="@color/colorPrimaryDark"
                                        app:cardCornerRadius="@dimen/_17sdp"
                                        app:cardElevation="0dp">

                                        <ImageView
                                            android:id="@+id/imgUpdateProfilePicture"
                                            android:layout_width="@dimen/_15sdp"
                                            android:layout_height="@dimen/_15sdp"
                                            android:layout_gravity="center"
                                            android:onClick="@{() -> viewModel.updatePictureClick()}"
                                            android:tint="@color/white"
                                            app:srcCompat="@drawable/ic_camera" />

                                    </androidx.cardview.widget.CardView>

                                </RelativeLayout>

                                <LinearLayout
                                    android:id="@+id/linearProgress"
                                    android:layout_width="0dp"
                                    android:layout_height="5dp"
                                    android:layout_marginTop="10dp"
                                    android:background="@color/Rose"
                                    android:orientation="horizontal" />
                            </LinearLayout>

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:visibility="gone"
                                app:srcCompat="@drawable/ic_camera_green" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:text="@string/upload_picture"
                                android:textColor="@color/very_light_blue"
                                android:textSize="16sp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_50sdp"
                    android:layout_marginEnd="@dimen/_30sdp"
                    android:layout_marginBottom="@dimen/_30sdp"
                    android:background="@drawable/shape_of_logo"
                    android:text="@string/send_report"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:onClick="@{()->viewModel.onSendClicked()}"/>
            </LinearLayout>


        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</layout>