<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.selwantech.raheeb.viewmodel.ItemChatMessageSentViewModel" />
    </data>

    <LinearLayout
        android:id="@+id/relativeCellChatItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:onClick="@{viewModel::onItemClick}"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearOutMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center|start"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_50sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tvOutDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:gravity="center|start"
                    android:text="@{viewModel.messages.date}"
                    android:textColor="@color/text_gray"
                    android:textSize="8sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvOutDate"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="@dimen/_11sdp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/shape_black_for_bott"
                    android:backgroundTint="@color/fill_order_dark_gray"
                    android:minHeight="@dimen/_50sdp"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/tvOutMessage"
                        style="@style/poppins_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|end"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:text="@{viewModel.messages.message}"
                        android:textColor="@color/black"
                        android:textSize="9sp"
                        android:visibility="@{viewModel.isTextOrOffer()}" />
                    <!--                    <com.rygelouv.audiosensei.player.AudioSenseiPlayerView&ndash;&gt;-->
                    <!--                        android:id="@+id/audio_player"-->
                    <!--                        android:layout_width="match_parent"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:layout_marginTop="@dimen/_5sdp"-->
                    <!--                        android:visibility="@{viewModel.isVoice()}"-->
                    <!--                        app:custom_layout="@layout/cell_audio" />-->
                    <LinearLayout
                        android:id="@+id/linearPlayer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:gravity="center|start"
                        android:orientation="horizontal"
                        android:visibility="@{viewModel.isVoice()}">

                        <ProgressBar
                            android:id="@+id/progress_bar"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginStart="@dimen/_7sdp"
                            android:visibility="gone" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:onClick="@{()->viewModel.onPlayClick()}"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="@dimen/_17sdp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:id="@+id/play"
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_gravity="center"
                                android:scaleType="centerCrop"
                                app:srcCompat="@drawable/ic_play" />

                        </androidx.cardview.widget.CardView>

                        <SeekBar
                            android:id="@+id/seekAudioOut"
                            android:layout_width="@dimen/_170sdp"
                            android:layout_height="25dp"
                            android:focusable="false"
                            android:focusableInTouchMode="false" />

                        <TextView
                            android:id="@+id/tvSeekDurationOut"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_7sdp"
                            android:text="00:00"
                            android:visibility="gone" />

                    </LinearLayout>

                </LinearLayout>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgMyAvatar"
                    imageUrl="@{viewModel.messages.sender.avatar}"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:src="@color/color_blue" />
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardResend"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:visibility="gone"
                app:cardBackgroundColor="@color/color_blue"
                app:cardCornerRadius="@dimen/_10sdp">

                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_resend" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>
</layout>