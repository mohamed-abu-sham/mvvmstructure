<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.selwantech.raheeb.ui.accountjourney.account.AccountViewModel" />

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/app_background">

            <RelativeLayout
                android:id="@+id/relativeMain"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp">

                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_centerInParent="true"
                        android:layout_toStartOf="@id/imgShare"
                        android:onClick="@{()->viewModel.onReportClicked()}"
                        app:srcCompat="@drawable/ic_trusted_with_dot" />

                    <ImageView
                        android:id="@+id/imgShare"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:onClick="@{()->viewModel.onShareClicked()}"
                        app:srcCompat="@drawable/ic_share_white" />

                </RelativeLayout>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/relativeMain">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="60dp"
                    android:background="@color/white"
                    android:gravity="center|top"
                    android:orientation="vertical">

                    <TextView
                        style="@style/poppins_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_50sdp"
                        android:text="@{viewModel.user.name}"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvOwnerRate"
                        style="@style/poppins_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_star_dark_gold"
                        android:drawablePadding="@dimen/_3sdp"
                        android:gravity="center"
                        android:text="@{viewModel.user.rateString}"
                        android:textColor="@color/black"
                        android:textSize="10sp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_10sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginTop="@dimen/_15sdp">

                            <TextView
                                style="@style/poppins_medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/connections"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:visibility="visible"
                                android:layout_marginStart="@dimen/_15sdp"
                                android:layout_marginEnd="@dimen/_15sdp"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_7sdp"
                                android:orientation="horizontal"
                                android:layout_marginStart="@dimen/_15sdp"
                                android:layout_marginEnd="@dimen/_15sdp">

                                <TextView
                                    android:id="@+id/tvFollowers"
                                    style="@style/poppins_regular"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0 followers"
                                    android:textColor="@color/black"
                                    android:textSize="13sp"
                                    android:onClick="@{()->viewModel.onFollowersClicked()}"/>

                                <TextView
                                    android:id="@+id/tvFollowing"
                                    style="@style/poppins_regular"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_20sdp"
                                    android:text="0 following"
                                    android:textColor="@color/black"
                                    android:textSize="13sp"
                                    android:onClick="@{()->viewModel.onFollowingClicked()}"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_50sdp"
                                android:orientation="horizontal"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:gravity="center|start"
                                android:background="@color/color_blue_twitter">

                                <ImageView
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    circleImageUrl="@{viewModel.user.avatar}"
                                    android:layout_marginStart="@dimen/_15sdp"/>
                                <androidx.cardview.widget.CardView
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    app:cardCornerRadius="@dimen/_15sdp"
                                    app:cardElevation="0dp"
                                    app:cardBackgroundColor="@color/color_blue"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:layout_marginEnd="@dimen/_15sdp">

                                    <ImageView
                                        android:layout_width="@dimen/_15sdp"
                                        android:layout_height="@dimen/_15sdp"
                                        app:srcCompat="@drawable/ic_twitter"
                                        android:layout_gravity="center"/>
                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    style="@style/poppins_regular"
                                    android:textSize="13sp"
                                    android:text="@string/invite_friends_and_get"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:orientation="horizontal"
                                android:gravity="center|start"
                                android:background="@color/color_blue_invite">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    app:cardCornerRadius="@dimen/_15sdp"
                                    app:cardElevation="0dp"
                                    app:cardBackgroundColor="@color/color_green"
                                    android:layout_marginStart="@dimen/_15sdp"
                                    android:layout_marginEnd="@dimen/_15sdp">

                                    <ImageView
                                        android:layout_width="@dimen/_15sdp"
                                        android:layout_height="@dimen/_15sdp"
                                        app:srcCompat="@drawable/ic_add_friend"
                                        android:layout_gravity="center"/>
                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    style="@style/poppins_regular"
                                    android:textSize="13sp"
                                    android:text="@string/invite_friends_and_get"/>

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/transactions"
                                android:textColor="@color/black"
                                style="@style/poppins_medium"
                                android:textSize="14sp"
                                android:layout_margin="@dimen/_15sdp"/>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:gravity="center"
                                android:layout_marginStart="@dimen/_15sdp"
                                android:layout_marginEnd="@dimen/_15sdp"
                                android:paddingEnd="@dimen/_10sdp"
                                android:paddingStart="@dimen/_10sdp"
                                android:background="@drawable/background_with_shadow_solid">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_toStartOf="@id/imgArrow"
                                    android:gravity="center|start"
                                    android:layout_centerInParent="true"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="@dimen/_25sdp"
                                        android:layout_height="@dimen/_25sdp"
                                        app:srcCompat="@drawable/ic_money_outline"
                                        android:padding="@dimen/_5sdp"
                                        android:background="@drawable/shape_black_for_bott"
                                        android:backgroundTint="@color/color_blue"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/_10sdp"
                                        android:text="@string/payment_and_sales"
                                        android:textColor="@color/black"
                                        android:textSize="13sp"
                                        style="@style/poppins_regular"/>
                                </LinearLayout>

                                <ImageView
                                    android:id="@+id/imgArrow"
                                    android:layout_width="@dimen/_15sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerInParent="true"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    app:srcCompat="@drawable/ic_arrow_forward" />

                            </RelativeLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/account"
                                android:textColor="@color/black"
                                style="@style/poppins_medium"
                                android:textSize="14sp"
                                android:layout_margin="@dimen/_15sdp"/>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:gravity="center"
                                android:layout_marginStart="@dimen/_15sdp"
                                android:layout_marginEnd="@dimen/_15sdp"
                                android:paddingStart="@dimen/_10sdp"
                                android:paddingEnd="@dimen/_10sdp"
                                android:background="@drawable/background_with_shadow_solid">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_toStartOf="@id/imgArrow2"
                                    android:gravity="center|start"
                                    android:layout_centerInParent="true"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="@dimen/_25sdp"
                                        android:layout_height="@dimen/_25sdp"
                                        app:srcCompat="@drawable/ic_setting_outline"
                                        android:padding="@dimen/_5sdp"
                                        android:background="@drawable/shape_black_for_bott"
                                        android:backgroundTint="@color/color_blue"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/_10sdp"
                                        android:text="@string/account_settings"
                                        android:textColor="@color/black"
                                        android:textSize="13sp"
                                        style="@style/poppins_regular"/>
                                </LinearLayout>

                                <ImageView
                                    android:id="@+id/imgArrow2"
                                    android:layout_width="@dimen/_15sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerInParent="true"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    app:srcCompat="@drawable/ic_arrow_forward" />

                            </RelativeLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/help"
                                android:textColor="@color/black"
                                style="@style/poppins_medium"
                                android:textSize="14sp"
                                android:layout_margin="@dimen/_15sdp"/>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:gravity="center"
                                android:layout_marginStart="@dimen/_15sdp"
                                android:layout_marginEnd="@dimen/_15sdp"
                                android:paddingStart="@dimen/_10sdp"
                                android:paddingEnd="@dimen/_10sdp"
                                android:onClick="@{()->viewModel.onHelpClicked()}"
                                android:background="@drawable/background_with_shadow_solid">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_toStartOf="@id/imgArrow3"
                                    android:gravity="center|start"
                                    android:layout_centerInParent="true"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="@dimen/_25sdp"
                                        android:layout_height="@dimen/_25sdp"
                                        app:srcCompat="@drawable/ic_help"
                                        android:background="@drawable/shape_black_for_bott"
                                        android:backgroundTint="@color/color_blue"
                                        android:padding="@dimen/_5sdp"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignTop="@id/cardView"
                                        android:layout_alignBottom="@id/cardView"
                                        android:layout_marginStart="@dimen/_10sdp"
                                        android:layout_toEndOf="@+id/cardView"
                                        android:text="@string/help"
                                        android:textColor="@color/black"
                                        android:textSize="13sp"
                                        style="@style/poppins_regular"/>
                                </LinearLayout>

                                <ImageView
                                    android:id="@+id/imgArrow3"
                                    android:layout_width="@dimen/_15sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerInParent="true"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    app:srcCompat="@drawable/ic_arrow_forward" />

                            </RelativeLayout>
                            
                            
                            <androidx.cardview.widget.CardView
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                app:cardCornerRadius="@dimen/_20sdp"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="@color/color_red_logout"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:onClick="@{()->viewModel.onLogoutClicked()}">

                                <ImageView
                                    android:layout_width="@dimen/_15sdp"
                                    android:layout_height="@dimen/_15sdp"
                                    app:srcCompat="@drawable/ic_logout"
                                    android:layout_gravity="center"/>
                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/logout"
                                android:textColor="@color/black"
                                style="@style/poppins_regular"
                                android:textSize="13sp"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginBottom="@dimen/_15sdp"
                                android:onClick="@{()->viewModel.onLogoutClicked()}"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgProfile"
                    imageUrl="@{viewModel.user.avatar}"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:src="@color/color_blue"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="3dp" />
                <ImageView
                    android:id="@+id/imgUpdateProfilePicture"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:padding="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:background="@drawable/shape_black_for_bott"
                    android:backgroundTint="@color/color_blue_light"
                    android:onClick="@{()->viewModel.onAddImageClicked()}"
                    app:srcCompat="@drawable/ic_camera_white" />
            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>


</layout>